// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 1. Hero Section (Singleton - assumiremos ID=1 sempre)
model HeroSection {
  id        Int      @id @default(1)
  title     String
  highlight String
  subtitle  String
  ctaText   String
  ctaLink   String
  updatedAt DateTime @updatedAt
}

// 2. Timeline (Lista)
model TimelineEvent {
  id          Int      @id @default(autoincrement())
  year        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// 3. Serviços (Lista)
model Service {
  id          Int      @id @default(autoincrement())
  icon        String
  title       String
  description String
  createdAt   DateTime @default(now())
}

// 4. Página Grupo (Singleton - ID=1)
model GroupPage {
  id          Int      @id @default(1)
  description String
  vision      String
  mission     String
  updatedAt   DateTime @updatedAt
}

// 5. Depoimentos (Lista)
model Testimonial {
  id        Int      @id @default(autoincrement())
  author    String
  position  String
  text      String
  image     String?
  createdAt DateTime @default(now())
}

// 6. Contacto (Singleton - ID=1)
model ContactInfo {
  id        Int      @id @default(1)
  email     String
  phone     String
  address   String
  hours     String
  updatedAt DateTime @updatedAt
}

// 7. Header (Singleton - ID=1)
model HeaderConfig {
  id              Int     @id @default(1)
  logoUrl         String
  logoText        String
  backgroundColor String
  sticky          Boolean @default(true)
  updatedAt       DateTime @updatedAt
}

// 8. Footer (Singleton - ID=1)
model FooterConfig {
  id          Int      @id @default(1)
  copyright   String
  description String
  logoUrl     String
  updatedAt   DateTime @updatedAt
}

// 9. Users & Profiles
model User {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  password        String
  role            String           @default("VISITOR") // ADMIN, PARTNER, VISITOR, JOB_SEEKER
  createdAt       DateTime         @default(now())
  partnerProfile  PartnerProfile?
  applications    Application[]
  activities      Activity[]
}

model PartnerProfile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  companyName String
  sector      String
  status      String   @default("PENDING") // PENDING, ACTIVE, INACTIVE
  bio         String?
  updatedAt   DateTime @updatedAt
}

model JobOpening {
  id          Int           @id @default(autoincrement())
  title       String
  location    String
  type        String        // Full-time, Remote, etc.
  description String
  salary      String?
  active      Boolean       @default(true)
  createdAt   DateTime      @default(now())
  applications Application[]
}

model Application {
  id           Int        @id @default(autoincrement())
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  jobId        Int
  job          JobOpening @relation(fields: [jobId], references: [id])
  status       String     @default("SUBMITTED") // SUBMITTED, REVIEWING, REJECTED, ACCEPTED
  resumeUrl    String?
  createdAt    DateTime   @default(now())
}

model Activity {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      String   // LOGIN, COMMENT, APPLICATION, etc.
  content   String
  createdAt DateTime @default(now())
}
